<!DOCTYPE html>
<html lang="id">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - <%= settings.siteName || 'HMI' %></title>
  <meta name="description" content="<%= settings.description || 'Website Himpunan Mahasiswa Islam' %>">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/style.css">

  <% if (settings.favicon) { %>
  <link rel="icon" href="<%= settings.favicon.url %>" type="image/x-icon">
  <% } %>
</head>

<body>
  <!-- Modern Navbar with Glassmorphism -->
  <nav class="navbar navbar-expand-lg navbar-light sticky-top">
    <div class="container">
      <!-- Brand Logo & Name -->
      <a class="navbar-brand d-flex align-items-center" href="/">
        <% if (settings.logo) { %>
        <img src="<%= settings.logo.url %>" alt="Logo HMI" height="50" class="me-2">
        <% } %>
        <div>
          <div class="fw-bold text-success"><%= settings.siteName || 'HMI' %></div>
          <% if (settings.tagline) { %>
          <small class="text-muted d-none d-lg-block" style="font-size: 0.75rem; line-height: 1.2;"><%= settings.tagline %></small>
          <% } %>
        </div>
      </a>

      <!-- Mobile Toggle Button -->
      <button class="navbar-toggler shadow-none" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <!-- Navigation Menu -->
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto align-items-lg-center">
          <!-- Beranda -->
          <li class="nav-item">
            <a class="nav-link <%= title === 'Beranda' ? 'active' : '' %>" href="/">
              <i class="bi bi-house-door d-lg-none me-2"></i>Beranda
            </a>
          </li>

          <!-- Dropdown Tentang -->
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle <%= (title === 'Tentang HMI' || title === 'Struktur Organisasi') ? 'active' : '' %>" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <i class="bi bi-info-circle d-lg-none me-2"></i>Tentang
            </a>
            <ul class="dropdown-menu">
              <li>
                <a class="dropdown-item <%= title === 'Tentang HMI' ? 'active' : '' %>" href="/tentang">
                  <i class="bi bi-building me-2"></i>Profil HMI
                </a>
              </li>
              <li>
                <a class="dropdown-item <%= title === 'Struktur Organisasi' ? 'active' : '' %>" href="/struktur">
                  <i class="bi bi-diagram-3 me-2"></i>Struktur Organisasi
                </a>
              </li>
              <li>
                <hr class="dropdown-divider">
              </li>
              <li>
                <a class="dropdown-item" href="/tentang#sejarah">
                  <i class="bi bi-clock-history me-2"></i>Sejarah
                </a>
              </li>
              <li>
                <a class="dropdown-item" href="/tentang#visi-misi">
                  <i class="bi bi-bullseye me-2"></i>Visi & Misi
                </a>
              </li>
            </ul>
          </li>

          <!-- Berita -->
          <li class="nav-item">
            <a class="nav-link <%= title.includes('Berita') ? 'active' : '' %>" href="/berita">
              <i class="bi bi-newspaper d-lg-none me-2"></i>Berita
            </a>
          </li>

          <!-- Galeri -->
          <li class="nav-item">
            <a class="nav-link <%= title.includes('Galeri') ? 'active' : '' %>" href="/galeri">
              <i class="bi bi-images d-lg-none me-2"></i>Galeri
            </a>
          </li>

          <!-- Dokumen -->
          <li class="nav-item">
            <a class="nav-link <%= title === 'Dokumen' ? 'active' : '' %>" href="/dokumen">
              <i class="bi bi-file-earmark-text d-lg-none me-2"></i>Dokumen
            </a>
          </li>

          <!-- Dropdown Halaman Statis -->
          <% if (pages && pages.length > 0) { %>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle <%= pages.some(function(page) { return title === page.title; }) ? 'active' : '' %>" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <i class="bi bi-three-dots d-lg-none me-2"></i>Halaman
            </a>
            <ul class="dropdown-menu">
              <% pages.forEach(function(page) { %>
              <li>
                <a class="dropdown-item <%= title === page.title ? 'active' : '' %>" href="/halaman/<%= page.slug %>">
                  <i class="bi bi-file-text me-2"></i><%= page.title %>
                </a>
              </li>
              <% }); %>
            </ul>
          </li>
          <% } %>

          <!-- Kontak -->
          <li class="nav-item">
            <a class="nav-link <%= title === 'Kontak' ? 'active' : '' %>" href="/kontak">
              <i class="bi bi-envelope d-lg-none me-2"></i>Kontak
            </a>
          </li>

          <!-- Search Bar -->
          <li class="nav-item ms-lg-3 mt-3 mt-lg-0">
            <form action="/cari" method="GET" class="d-flex">
              <div class="input-group">
                <input class="form-control form-control-sm" type="search" name="q" placeholder="Cari..." aria-label="Search" style="min-width: 180px; border-radius: 20px 0 0 20px;">
                <button class="btn btn-success btn-sm" type="submit" style="border-radius: 0 20px 20px 0;">
                  <i class="bi bi-search"></i>
                </button>
              </div>
            </form>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Content Area -->
  <main>
    <%- body %>
  </main>

  <!-- Modern Footer -->
  <footer class="bg-dark text-white pt-5 pb-3 mt-5">
    <div class="container">
      <div class="row g-4">
        <!-- About Section -->
        <div class="col-lg-4 mb-4">
          <div class="mb-3">
            <% if (settings.logo) { %>
            <img src="<%= settings.logo.url %>" alt="Logo" height="45" class="mb-3">
            <% } %>
            <h5 class="text-success fw-bold mb-3" style="letter-spacing: -0.02em;">
              <%= settings.siteName || 'HMI' %>
            </h5>
          </div>
          <p class="text-white-50 mb-3" style="line-height: 1.7;">
            <%= settings.description || 'Himpunan Mahasiswa Islam - Organisasi mahasiswa yang bergerak dalam bidang dakwah dan pemberdayaan.' %>
          </p>

          <!-- Social Media Icons -->
          <% if (settings.socialMedia) { %>
          <div class="d-flex gap-2 mt-3">
            <% if (settings.socialMedia.facebook) { %>
            <a href="<%= settings.socialMedia.facebook %>" class="btn btn-outline-light btn-sm" target="_blank" rel="noopener noreferrer" aria-label="Facebook">
              <i class="bi bi-facebook"></i>
            </a>
            <% } %>
            <% if (settings.socialMedia.instagram) { %>
            <a href="<%= settings.socialMedia.instagram %>" class="btn btn-outline-light btn-sm" target="_blank" rel="noopener noreferrer" aria-label="Instagram">
              <i class="bi bi-instagram"></i>
            </a>
            <% } %>
            <% if (settings.socialMedia.twitter) { %>
            <a href="<%= settings.socialMedia.twitter %>" class="btn btn-outline-light btn-sm" target="_blank" rel="noopener noreferrer" aria-label="Twitter">
              <i class="bi bi-twitter"></i>
            </a>
            <% } %>
            <% if (settings.socialMedia.youtube) { %>
            <a href="<%= settings.socialMedia.youtube %>" class="btn btn-outline-light btn-sm" target="_blank" rel="noopener noreferrer" aria-label="YouTube">
              <i class="bi bi-youtube"></i>
            </a>
            <% } %>
          </div>
          <% } %>
        </div>

        <!-- Quick Links -->
        <div class="col-lg-2 col-md-4 col-6 mb-4">
          <h6 class="text-success mb-3 fw-bold" style="font-size: 0.9375rem;">Menu Cepat</h6>
          <ul class="list-unstyled">
            <li class="mb-2">
              <a href="/" class="text-white-50 text-decoration-none d-inline-flex align-items-center">
                <i class="bi bi-chevron-right me-1" style="font-size: 0.75rem;"></i>Beranda
              </a>
            </li>
            <li class="mb-2">
              <a href="/tentang" class="text-white-50 text-decoration-none d-inline-flex align-items-center">
                <i class="bi bi-chevron-right me-1" style="font-size: 0.75rem;"></i>Tentang Kami
              </a>
            </li>
            <li class="mb-2">
              <a href="/berita" class="text-white-50 text-decoration-none d-inline-flex align-items-center">
                <i class="bi bi-chevron-right me-1" style="font-size: 0.75rem;"></i>Berita
              </a>
            </li>
            <li class="mb-2">
              <a href="/galeri" class="text-white-50 text-decoration-none d-inline-flex align-items-center">
                <i class="bi bi-chevron-right me-1" style="font-size: 0.75rem;"></i>Galeri
              </a>
            </li>
            <li class="mb-2">
              <a href="/dokumen" class="text-white-50 text-decoration-none d-inline-flex align-items-center">
                <i class="bi bi-chevron-right me-1" style="font-size: 0.75rem;"></i>Dokumen
              </a>
            </li>
          </ul>
        </div>

        <!-- Pages Links -->
        <% if (pages && pages.length > 0) { %>
        <div class="col-lg-2 col-md-4 col-6 mb-4">
          <h6 class="text-success mb-3 fw-bold" style="font-size: 0.9375rem;">Halaman</h6>
          <ul class="list-unstyled">
            <% pages.slice(0, 5).forEach(function(page) { %>
            <li class="mb-2">
              <a href="/halaman/<%= page.slug %>" class="text-white-50 text-decoration-none d-inline-flex align-items-center">
                <i class="bi bi-chevron-right me-1" style="font-size: 0.75rem;"></i><%= page.title %>
              </a>
            </li>
            <% }); %>
          </ul>
        </div>
        <% } %>

        <!-- Contact Info -->
        <div class="col-lg-4 col-md-4 mb-4">
          <h6 class="text-success mb-3 fw-bold" style="font-size: 0.9375rem;">Hubungi Kami</h6>
          <% if (settings.contactInfo) { %>
          <ul class="list-unstyled">
            <% if (settings.contactInfo.email) { %>
            <li class="mb-3 d-flex align-items-start">
              <i class="bi bi-envelope-fill text-success me-3 mt-1" style="font-size: 1.1rem;"></i>
              <div>
                <small class="text-white-50 d-block mb-1">Email</small>
                <a href="mailto:<%= settings.contactInfo.email %>" class="text-white text-decoration-none">
                  <%= settings.contactInfo.email %>
                </a>
              </div>
            </li>
            <% } %>
            <% if (settings.contactInfo.phone) { %>
            <li class="mb-3 d-flex align-items-start">
              <i class="bi bi-telephone-fill text-success me-3 mt-1" style="font-size: 1.1rem;"></i>
              <div>
                <small class="text-white-50 d-block mb-1">Telepon</small>
                <a href="tel:<%= settings.contactInfo.phone %>" class="text-white text-decoration-none">
                  <%= settings.contactInfo.phone %>
                </a>
              </div>
            </li>
            <% } %>
            <% if (settings.contactInfo.address) { %>
            <li class="mb-3 d-flex align-items-start">
              <i class="bi bi-geo-alt-fill text-success me-3 mt-1" style="font-size: 1.1rem;"></i>
              <div>
                <small class="text-white-50 d-block mb-1">Alamat</small>
                <span class="text-white-50"><%= settings.contactInfo.address %></span>
              </div>
            </li>
            <% } %>
          </ul>
          <% } %>
        </div>
      </div>

      <!-- Divider -->
      <hr class="border-secondary my-4" style="opacity: 0.15;">

      <!-- Bottom Footer -->
      <div class="row align-items-center">
        <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
          <p class="mb-0 text-white-50 small">
            &copy; <%= new Date().getFullYear() %> <%= settings.siteName || 'HMI' %>.
            <span class="d-none d-md-inline">Hak Cipta Dilindungi.</span>
          </p>
        </div>
        <div class="col-md-6 text-center text-md-end">
          <p class="mb-0 text-white-50 small">
            Dibuat dengan <i class="bi bi-heart-fill text-danger"></i> menggunakan
            <a href="/admin" class="text-success text-decoration-none fw-semibold">Payload CMS</a>
          </p>
        </div>
      </div>
    </div>
  </footer>

  <!-- Back to Top Button -->
  <button class="btn btn-success btn-back-to-top" id="backToTop" aria-label="Kembali ke atas">
    <i class="bi bi-arrow-up"></i>
  </button>

  <!-- Bootstrap JS Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Custom JavaScript -->
  <script>
    // Navbar scroll effect
    window.addEventListener('scroll', function() {
      const navbar = document.querySelector('.navbar');
      if (window.scrollY > 50) {
        navbar.classList.add('scrolled');
      } else {
        navbar.classList.remove('scrolled');
      }
    });

    // Back to top button
    const backToTopBtn = document.getElementById('backToTop');

    window.addEventListener('scroll', function() {
      if (window.scrollY > 300) {
        backToTopBtn.classList.add('show');
      } else {
        backToTopBtn.classList.remove('show');
      }
    });

    backToTopBtn.addEventListener('click', function() {
      window.scrollTo({
        top: 0,
        behavior: 'smooth'
      });
    });

    // Animate on scroll
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver(function(entries) {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('animated');
          observer.unobserve(entry.target);
        }
      });
    }, observerOptions);

    document.querySelectorAll('.animate-on-scroll').forEach(el => {
      observer.observe(el);
    });

    // Close mobile menu on link click
    document.querySelectorAll('.navbar-nav .nav-link').forEach(link => {
      link.addEventListener('click', function() {
        const navbarCollapse = document.querySelector('.navbar-collapse');
        if (navbarCollapse.classList.contains('show')) {
          const bsCollapse = new bootstrap.Collapse(navbarCollapse);
          bsCollapse.hide();
        }
      });
    });

    // Smooth scroll for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function(e) {
        const href = this.getAttribute('href');
        if (href !== '#' && href !== '') {
          e.preventDefault();
          const target = document.querySelector(href);
          if (target) {
            target.scrollIntoView({
              behavior: 'smooth',
              block: 'start'
            });
          }
        }
      });
    });

    // Preload images with fade-in effect
    document.querySelectorAll('img[data-src]').forEach(img => {
      img.addEventListener('load', function() {
        this.style.opacity = '1';
      });
      img.src = img.dataset.src;
    });
  </script>

  <!-- Custom JS File -->
  <script src="/js/main.js"></script>
</body>

</html>