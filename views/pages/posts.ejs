<%- include('../layouts/main', {
  title: title,
  settings: settings,
  body: `
    <!-- Page Header -->
    <section class="page-header bg-success bg-opacity-10 py-5">
      <div class="container">
        <div class="text-center">
          <h1 class="display-4 fw-bold text-success mb-2">Berita & Kegiatan</h1>
          <p class="lead text-muted">Update terbaru dari HMI</p>
        </div>
      </div>
    </section>

    <!-- Filter & Category -->
    <section class="py-4 bg-light">
      <div class="container">
        <div class="d-flex flex-wrap gap-2 justify-content-center">
          <a href="/berita" class="btn btn-${!selectedCategory ? 'success' : 'outline-success'}">
            <i class="bi bi-grid me-2"></i>Semua
          </a>
          <a href="/berita?category=news" class="btn btn-${selectedCategory === 'news' ? 'success' : 'outline-success'}">
            <i class="bi bi-newspaper me-2"></i>Berita
          </a>
          <a href="/berita?category=activity" class="btn btn-${selectedCategory === 'activity' ? 'success' : 'outline-success'}">
            <i class="bi bi-calendar-event me-2"></i>Kegiatan
          </a>
          <a href="/berita?category=announcement" class="btn btn-${selectedCategory === 'announcement' ? 'success' : 'outline-success'}">
            <i class="bi bi-megaphone me-2"></i>Pengumuman
          </a>
          <a href="/berita?category=achievement" class="btn btn-${selectedCategory === 'achievement' ? 'success' : 'outline-success'}">
            <i class="bi bi-trophy me-2"></i>Prestasi
          </a>
        </div>
      </div>
    </section>

    <!-- Posts Grid -->
    <section class="py-5">
      <div class="container">
        ${posts && posts.length > 0 ? `
          <div class="row g-4">
            ${posts.map(post => `
              <div class="col-lg-4 col-md-6">
                <div class="card border-0 shadow-sm h-100 hover-lift">
                  ${post.featuredImage ? `
                    <img src="${post.featuredImage.url}" 
                         class="card-img-top" 
                         alt="${post.title}"
                         style="height: 220px; object-fit: cover;">
                  ` : `
                    <div class="bg-secondary bg-opacity-10 d-flex align-items-center justify-content-center" 
                         style="height: 220px;">
                      <i class="bi bi-image text-secondary" style="font-size: 4rem;"></i>
                    </div>
                  `}
                  <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                      <span class="badge bg-${
                        post.category === 'news' ? 'primary' : 
                        post.category === 'activity' ? 'success' : 
                        post.category === 'announcement' ? 'warning' : 
                        'info'
                      }">
                        ${
                          post.category === 'news' ? 'Berita' : 
                          post.category === 'activity' ? 'Kegiatan' : 
                          post.category === 'announcement' ? 'Pengumuman' : 
                          'Prestasi'
                        }
                      </span>
                      <small class="text-muted">
                        <i class="bi bi-calendar3 me-1"></i>
                        ${new Date(post.publishedDate).toLocaleDateString('id-ID', { 
                          day: 'numeric', 
                          month: 'short', 
                          year: 'numeric' 
                        })}
                      </small>
                    </div>
                    <h5 class="card-title mb-2">
                      <a href="/berita/${post.slug}" 
                         class="text-decoration-none text-dark stretched-link">
                        ${post.title}
                      </a>
                    </h5>
                    <p class="card-text text-muted small mb-3">${post.excerpt}</p>
                    <div class="d-flex align-items-center justify-content-between text-muted small">
                      <div>
                        <i class="bi bi-eye me-1"></i>
                        <span>${post.views || 0} views</span>
                      </div>
                      ${post.author ? `
                        <div>
                          <i class="bi bi-person me-1"></i>
                          <span>${post.author.name || 'Admin'}</span>
                        </div>
                      ` : ''}
                    </div>
                  </div>
                </div>
              </div>
            `).join('')}
          </div>

          <!-- Pagination -->
          ${pagination && pagination.totalPages > 1 ? `
            <nav aria-label="Page navigation" class="mt-5">
              <ul class="pagination justify-content-center">
                <li class="page-item ${!pagination.hasPrevPage ? 'disabled' : ''}">
                  <a class="page-link" 
                     href="/berita?page=${pagination.page - 1}${selectedCategory ? '&category=' + selectedCategory : ''}">
                    <i class="bi bi-chevron-left"></i>
                  </a>
                </li>
                
                ${Array.from({length: pagination.totalPages}, (_, i) => i + 1).map(pageNum => `
                  <li class="page-item ${pageNum === pagination.page ? 'active' : ''}">
                    <a class="page-link" 
                       href="/berita?page=${pageNum}${selectedCategory ? '&category=' + selectedCategory : ''}">
                      ${pageNum}
                    </a>
                  </li>
                `).join('')}
                
                <li class="page-item ${!pagination.hasNextPage ? 'disabled' : ''}">
                  <a class="page-link" 
                     href="/berita?page=${pagination.page + 1}${selectedCategory ? '&category=' + selectedCategory : ''}">
                    <i class="bi bi-chevron-right"></i>
                  </a>
                </li>
              </ul>
            </nav>
          ` : ''}
        ` : `
          <div class="text-center py-5">
            <i class="bi bi-newspaper text-muted" style="font-size: 5rem;"></i>
            <h4 class="mt-3 text-muted">Belum ada berita tersedia</h4>
            <p class="text-muted">Pantau terus untuk update terbaru</p>
          </div>
        `}
      </div>
    </section>

    <style>
    .hover-lift {
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .hover-lift:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 30px rgba(0,0,0,0.15) !important;
    }
    </style>
  `
}) %>